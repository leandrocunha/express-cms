<h1>Admin</h1>
<p>You are in the restricted area!</p>
<p><a href="/admin/logout">Logout</a></p>

<hr>

<section>
	{{> navigation}}

	<section>
		<h2>Users</h2>
		<p>Create a new user.</p>
		<form action="/admin/user" method="post" accept-charset="utf-8">
			<label for="name">Name:</label>
			<input id="name" name="name" type="text">
			
			<label for="email">Email:</label>
			<input id="email" name="email" type="text">

			<button type="submit">Create</button>
		</form>
	</section>

	<section>
		<table>
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th></th>
				</tr>
  			{{#each users}}
  				<tr>
  					<td>{{name}}</td>
  					<td>{{email}}</td>
  					<td>
  						<form action="/admin/user/{{_id}}?_method=DELETE" method="post" accept-charset="utf-8">
							<button type="submit">delete</button>
  						</form>
  					</td>
  				</tr>
  			{{/each}}
		</ul>
	</section>
</section>